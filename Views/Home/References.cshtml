@model IEnumerable<PCI_Website_2018.Models.ClientReferences>
@using System.Web;
@{
    ViewData["Title"] = "Client References";
}

    <div class="jumbotron padding-tb-xl padding-xs-tb text-center" id="jumbotron-references-bg">
        <div class="container narrow">
            <div class="row">
                <h1>@ViewData["Title"]</h1>
                <h4>Our Client Contacts</h4>
            </div>
        </div>
    </div>

    <div class="container-fluid padding-tb-md" id="mid-home-bg">
        <div class="container narrow">

            <!-- nav tree ... -->
            <div class="row">
                <div class="col-lg-12">
                    <h5 class="text-muted"><a asp-area="" asp-controller="Home" asp-action="Index">Palmer Capital Inc</a> &nbsp;&rsaquo;&nbsp; <a asp-area="" asp-controller="Home" asp-action="Clients">Clients</a> &nbsp;&rsaquo;&nbsp; @ViewData["Title"] </h5>
                    <hr class="hr-trans" />
                </div>
            </div>
       
            <div class="row padding-top-md"></div><!--extra spacing -->
            <div class="row padding-tb"></div><!--extra spacing -->

            @{
                int i = 0;
            }
            @foreach (var item in Model) {  
                    string email = Convert.ToString(item.RefFax).ToLower();
                    i++;
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 padding-tb padding-xs-tb xs-font-lg">
                        <b><p>@Html.DisplayFor(modelItem => item.RefCompany)</p></b>
                        <h5>@Html.DisplayFor(modelItem => item.RefFullname)</h5>
                        <a href="mailto:@email.ToLower()" style="word-break: break-all;">@email</a>
                    </div>
                    <div class="visible-xs">
                        <div class="clearfix"></div>
                        <hr class="hr-trans" />
                    </div>
                    if (i % 3 == 0)
                    {
                        <div class="hidden-xs">
                            <div class="clearfix"></div>
                            <hr />
                        </div>
                    }
            } 
        </div>
    </div>

@section Top {
    <div class="top" title="scroll to top">
    <button type="button" class="btn btn-sm btn-default">
        <i class="material-icons icon-lg">arrow_upward</i>
    </button>
    </div>
}