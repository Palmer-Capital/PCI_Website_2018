@model ErrorViewModel
@{
    ViewData["Title"] = "Oops.";
    string database = Convert.ToString(@TempData["Error"]);
}

    <div class="container-fluid" id="mid-home-bg">
        <div class="container narrow padding-tb-lg padding-xs-tb-lg">
            <div class="row">
                    <h1>@ViewData["Title"]</h1>
                    <h3 class="text-danger">A database error occurred while trying to retreive <u>@database</u> data.</h3>
                    <p>Please contact Palmer Capital support at <a href="tel:916-462-6254">916-462-6254</a>.</p>

                    <div class="row padding-tb-md">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 xs-no-padding">
                            <p><a class="btn btn-palmer"role="button" asp-controller="Home" asp-action="Index">Go to Home Page &raquo;</a></p>
                        </div>
                    </div>

                    @if (Model.ShowRequestId)
                        {
                            <p>
                                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            </p>
                        }
            </div>
        </div>
    </div>




